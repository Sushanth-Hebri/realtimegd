<!-- views/userDetails.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Details</title>
</head>
<body>
  <h1>User Details</h1>

  <% users.forEach(user => { %>
    <div>
      <h3><%= user.username %></h3>
      <p>Email: <%= user.email %></p>
      <% if (user.profile && user.profile.data) { %>
        <img src="/profilePicByUsername/<%= user.username %>" alt="Profile Picture">
      <% } else { %>
        <img src="/default-profile-pic.jpg" alt="Default Profile Picture">
      <% } %>
      <hr>
    </div>
  <% }); %>
</body>
</html>
